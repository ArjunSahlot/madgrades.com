events {
    worker_connections 1024;
}

http {
    include mime.types;
    sendfile on;
    server {
        listen ${PORT};
        listen [::]:${PORT};

        resolver 127.0.0.11;
        autoindex off;

        server_name _;
        server_tokens off;

        root /app/build;
        error_page 404 /index.html;
        gzip_static on;
    }
}